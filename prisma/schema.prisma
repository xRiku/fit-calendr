generator client {
  provider = "prisma-client-js"
}

datasource db {
  // dev
  // provider = "sqlite"
  
  // prod
  provider = "postgresql"
  directUrl = env("DIRECT_URL")
  url      = env("DATABASE_URL")
}


model GymCheck {
  id String @id @default(cuid())
  description String
  date DateTime

  user User @relation(fields: [userId], references: [id])
  userId String


  updatedAt DateTime @updatedAt @default(now())
  createdAt DateTime @default(now())

  @@map("gym_checks")
}


model CheatMeal {
  id String @id @default(cuid())
  name String
  date DateTime
  
  user User @relation(fields: [userId], references: [id])
  userId String

  updatedAt DateTime @updatedAt @default(now())
  createdAt DateTime @default(now())
  @@map("cheat_meals")
}

model User {
  id String @id @default(cuid())
  email String @unique
  hashedPassword String?
  name String 

  cheatMeals CheatMeal[]
  gymChecks GymCheck[]

  updatedAt DateTime @updatedAt @default(now())
  createdAt DateTime @default(now())

  @@map("users")
}
